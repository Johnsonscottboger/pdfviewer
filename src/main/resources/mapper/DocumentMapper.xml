<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aning.pdfviewer.dao.IDocumentDao">
    <resultMap id="documentMap" type="com.aning.pdfviewer.entity.Document">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="md5" property="md5" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="size" property="size" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getAll" resultMap="documentMap">
        select * from Document t
    </select>

    <select id="getById" resultMap="documentMap">
        select * from Document t
        where t.id = #{id}
    </select>

    <select id="getByMD5" resultMap="documentMap">
        select * from Document t
        where t.md5 = #{md5}
    </select>

    <select id="getAllByUserId" resultMap="documentMap">
       SELECT d.* FROM Document d
        LEFT JOIN PDFViewer.User_Document r ON d.id = r.document_id
        WHERE r.user_id = 1
    </select>

    <insert id="add" parameterType="com.aning.pdfviewer.entity.Document">
        insert into Document (md5, name, size, type)
        values (#{md5}, #{name}, #{size}, #{type})
    </insert>

    <delete id="delete" parameterType="com.aning.pdfviewer.entity.Document">
        delete from Document
        where id = #{id}
    </delete>
</mapper>